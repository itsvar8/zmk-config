#include "chrs-layouts.dtsi"
#include <dt-bindings/zmk/matrix_transform.h>

/ {
    matrix_transform0: matrix_transform0 {
        compatible = "zmk,matrix-transform";
        columns = <17>;
        rows = <1>;
        map = <
            RC(0,0) RC(0,1) RC(0,2)
            RC(0,3) RC(0,4) RC(0,5) RC(0,6)
            RC(0,7) RC(0,8) RC(0,9)
            RC(0,10) RC(0,11) RC(0,12) RC(0,13)
            RC(0,14) RC(0,15) RC(0,16)
        >;
    };
};

&physical_layout_chrs {
    transform = <&matrix_transform0>;
};

// Encoders for all parts of the keyboard.
// If the encoder(s) are not behaving as expected,
// update steps and triggers-per-rotation to match your hardware.
// All pin assignments are done in the part overlays.

/ {
    encoder0: encoder0 {
        compatible = "alps,ec11";
        steps = <80>;
        status = "disabled";
    };

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&encoder0>;
        triggers-per-rotation = <20>;
    };
};

